<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otpsend"
    xmlns:card_view="http://schemas.android.com/tools"

    android:background="@drawable/login"
    >


        <TextView

            android:layout_marginTop="40dp"
            android:id="@+id/log2"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text="Create Account to"
            android:textColor="#DBD8D3"
            android:textSize="40dp"

            android:layout_marginLeft="50dp"
            android:textStyle="bold"

            />

    <androidx.cardview.widget.CardView
        android:layout_width="92dp"
        android:layout_height="92dp"
        app:cardCornerRadius="44dp"
        android:layout_below="@id/log2"
        card_view:background="#aaaa"
        android:layout_marginLeft="160dp"

        card_view:cardPreventCornerOverlap = "false"
        card_view:cardElevation="10dp"
        android:id="@+id/card"
        >
        <ImageView
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:id="@+id/addphoto"
            android:background="@drawable/add"

            />

    </androidx.cardview.widget.CardView>
    <Button
        android:layout_marginTop="0dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/card"
        android:text="SELECT"
        android:gravity="center"
        android:textSize="12dp"
        android:id="@+id/select"
        />
    <Button
        android:layout_marginTop="0dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/card"
        android:text="UPLOAD"
        android:gravity="center"
        android:textSize="12dp"
        android:id="@+id/upload"
        />

    <EditText
        android:textColorHint="#F7F5F5"
        android:textColor="#DBD8D3"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="25dp"
        android:gravity="center"
        android:hint="Enter your Name"
        android:layout_marginTop="220dp"
        android:id="@+id/sname"
        />
    <EditText
        android:textColorHint="#F7F5F5"
        android:textColor="#DBD8D3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="25dp"

        android:drawableLeft="@drawable/email"
        android:layout_below="@id/sname"
        android:hint="Enter Your Email"
        android:id="@+id/semail"
        android:gravity="center"
        />
    <EditText
        android:textColorHint="#F7F5F5"
        android:textColor="#DBD8D3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="25dp"
        android:inputType="number"
        android:drawableLeft="@drawable/mobile"
        android:gravity="center"
        android:layout_below="@id/semail"
        android:hint="Enter Your Mobile"
        android:id="@+id/mobile"
        />
    <EditText
        android:textColorHint="#F7F5F5"

        android:drawableLeft="@drawable/loc"
        android:textColor="#DBD8D3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="25dp"
        android:inputType="textPassword"

        android:gravity="center"
        android:layout_below="@id/mobile"
        android:hint="Enter Your Password"
        android:id="@+id/password"
        />

    <Button
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/password"
        android:text="Sign In"
        android:gravity="center"
        android:drawableRight="@drawable/signup"
        android:textSize="33dp"
        android:id="@+id/signup"

        />
    <Button
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/password"
        android:text="PROCEED"
        android:gravity="center"
        android:drawableRight="@drawable/next"
        android:textSize="33dp"
        android:id="@+id/forward"

        />


</RelativeLayout>